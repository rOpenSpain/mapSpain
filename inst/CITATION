citHeader("To cite the 'mapSpain' package in publications use:")

year = format(Sys.time(), "%Y")
vers = paste('R package version', meta$Version)
auth = Filter(function(p) 'aut' %in% p$role, as.person(meta$Author))
citEntry(
  entry = 'manual',
  title = paste('mapSpain:', meta$Title),
  author = auth,
  year = year,
  note = vers,
  url = 'https://dieghernan.github.io/mapSpain/',
  textVersion = paste('Hernangomez, D. (', year, '). mapSpain: ', meta$Title, '. ', vers, '. https://dieghernan.github.io/mapSpain/', sep = '')
)
